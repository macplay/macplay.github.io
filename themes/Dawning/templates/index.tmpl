{# -*- coding: utf-8 -*- #}

{% extends 'base.tmpl' %}
{% import 'pagination_helper.tmpl' as pagination with context %}

{% block extra_head %}
    {{ super() }}
    {% if posts and (permalink == '/' or permalink == '/' + index_file) %}
        <link rel="prefetch" href="{{ posts[0].permalink() }}" type="text/html">
    {% endif %}
{% endblock extra_head %}

{% block main_content %}
    <div class="postindex page-body">
    {% for post in posts %}
    <div class="post-entry post-{{ post.meta('type') }}">
        <div class="entry-title">
            <a href="{{ post.permalink() }}">{{ post.title()|e }}</a>
        </div>
        <div class="post-meta">
            <span class="post-meta-item-icon">
                <i class="user icon"></i>
            </span>
            <span class="post-meta-item-text" itemprop="author">
            {% if author_pages_generated %}
                <a href="{{ _link('author', post.author()) }}">{{ post.author()|e }}</a>
            {% else %}
                {{ post.author()|e }}
            {% endif %}
            </span>
            <span class="post-meta-divider">|</span>
            <span class="post-meta-item-icon">
                <i class="calendar icon"></i>
            </span>
            <span class="post-meta-item-text">
                <a href="/archive.html">
                    <time datetime="{{ post.formatted_date('webiso') }}" itemprop="datePublished" title="{{ post.formatted_date(date_format)|e }}">{{ post.formatted_date(date_format)|e }}
                    </time>
                </a>
            </span>
            {% if ((post.tags)|length) is greaterthan (hidden_tags|length) %}
                <span class="post-meta-divider">|</span>
                <span class="post-meta-item-icon">
                    <i class="tags icon"></i>
                </span>
                    {% for tag in post.tags %}
                        {% if tag not in hidden_tags %}
                            <span class="post-meta-tag-item">
                                <a href="{{ _link('tag', tag) }}">{{ tag|e }}</a>
                            </span>
                        {% endif %}
                    {% endfor %}
            {% endif %}
        </div>
        <div class="post-summary">
            {% if index_teasers %}
                {{ post.text(teaser_only=True) }}
            {% else %}
                {{ post.text(teaser_only=False) }}
            {% endif %}
        </div>
    </div>
    {% endfor %}
    </div>

    {% if page_links %}
        {{ pagination.page_navigation(current_page, page_links, prevlink, nextlink, prev_next_links_reversed, surrounding=5) }}
    {% endif %}
{% endblock main_content %}
