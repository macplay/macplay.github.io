{#  -*- coding: utf-8 -*- #}

{% extends 'index.tmpl' %}
{% import 'pagination_helper.tmpl' as pagination with context %}
{% import 'feeds_translations_helper.tmpl' as feeds_translations with context %}

{% block main_content %}
    <div class="tagpage page-body">
        <div class="tag-title">{{ title|e }}</div>
        <div class="author-description">
            {% if description %}
                <p>{{ description }}</p>
            {% endif %}
        </div>
        <div class="tag-rssfeed">
            {{ feeds_translations.feed_link(tag, kind) }}
        </div>
        {% if posts %}
        <div class="tag-postlist">
            <ul>
            {% for post in posts %}
                <li>
                    <a href="{{ post.permalink() }}">{{ post.title()|e }}</a>
                    <time datetime="{{ post.formatted_date('webiso') }}" title="{{ post.formatted_date(date_format)|e }}">{{ post.formatted_date(date_format)|e }}</time>
                </li>
            {% endfor %}
            </ul>
        </div>
        {% endif %}
    </div>
    {% if page_links and page_links|length > 1 %}
        {{ pagination.page_navigation(current_page, page_links, prevlink, nextlink, prev_next_links_reversed, surrounding=5) }}
    {% endif %}
{% endblock %}
